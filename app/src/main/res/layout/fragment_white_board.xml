<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a8a0a0">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/controlLayout">

        <include layout="@layout/include_draw_content_layout" />


        <!--<include layout="@layout/include_grid_view_layout" />-->

    </FrameLayout>

    <FrameLayout
        android:id="@+id/controlLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/btn_redo"
        style="@style/control_btn"
        android:alpha="0.4"
        android:src="@drawable/ic_redo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_undo"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/btn_undo"
        style="@style/control_btn"
        android:alpha="0.4"
        android:src="@drawable/ic_undo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="false"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_eraser"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/btn_empty"
        style="@style/control_btn"
        android:src="@drawable/ic_empty"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/btn_eraser"
        style="@style/control_btn"
        android:alpha="0.4"
        android:src="@drawable/ic_eraser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_save" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn_effectMessage"
        android:layout_centerHorizontal="true"
        android:src="@drawable/abc_btn_check_to_on_mtrl_000"
        android:layout_marginTop="10dp" />

    <ImageView
        android:id="@+id/btn_add"
        style="@style/control_btn"
        android:src="@drawable/send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/btn_save"
        style="@style/control_btn"
        android:src="@drawable/ic_file"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:id="@+id/btn_stroke"
        style="@style/control_btn"
        android:padding="@dimen/control_draw_padding"
        android:src="@drawable/stroke_type_rbtn_draw_checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_photo"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/btn_background"
        style="@style/control_btn"
        android:src="@drawable/ic_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_empty"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/btn_photo"
        style="@style/control_btn"
        android:src="@drawable/ic_background"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/btn_background"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:id="@+id/btn_drag"
        style="@style/control_btn"
        android:alpha="0.4"
        android:src="@drawable/ic_drag"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView style="@style/control_btn.space"
        android:id="@+id/btn_word"
        android:src="@drawable/word"
        android:visibility="gone" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thinkingEdit"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_add"
        android:hint="show your idea"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>