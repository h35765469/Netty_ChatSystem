<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cool.user.netty_chatsystem.Register_Activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F22F08">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/backImg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/leftarrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="AmazeChat"
            android:id="@+id/textView24"
            android:layout_centerInParent="true"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="註冊帳號以及密碼"
        android:id="@+id/textView25"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <EditText
        android:textColorHint="#b4b3b3" android:id="@+id/Account_edit"
        android:layout_width="fill_parent" android:layout_height="40dp"
        android:maxLines="1"
        android:background="@drawable/linearlayout_conrner_style"
        android:gravity="center"
        android:hint="Username"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/Password_edit"
        android:layout_width="fill_parent" android:layout_height="40dp"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:hint="Password"
        android:maxLines="1"
        android:background="@drawable/linearlayout_conrner_style"
        android:gravity="center"
        android:textColorHint="#b4b3b3"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="註冊"
        android:id="@+id/registerBtn"
        android:background="@drawable/button_corner_style"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />


</LinearLayout>
