<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/backTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="S"
            android:textColor="@android:color/background_light"

            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="false"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="false"
            android:gravity="fill_vertical"
            android:text="驚喜"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <com.cool.user.netty_chatsystem.Chat_Fragment.ProfileFragment.CollectFragment.RecyclerViewPager.RecyclerViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycleViewPager"
        android:visibility="gone">

    </com.cool.user.netty_chatsystem.Chat_Fragment.ProfileFragment.CollectFragment.RecyclerViewPager.RecyclerViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/myContentListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myContentRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none" />

        <TextView
            android:id="@+id/noSuprpiseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="無驚喜"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="15sp"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>