<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgressBar">
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress1" format="integer" />
        <attr name="progressbarColor" format="color" />
        <attr name="progressBarThickness" format="dimension" />
    </declare-styleable>


    <declare-styleable name="AbstractWheelPicker">
        <attr name="wheel_data" format="reference" />
        <attr name="wheel_style" format="enum">
            <enum name="straight" value="0" />
            <enum name="curved" value="1" />
        </attr>
        <attr name="wheel_direction" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="wheel_item_index" format="integer" />
        <attr name="wheel_item_same_size" format="boolean" />
        <attr name="wheel_item_count" format="integer" />
        <attr name="wheel_item_space" format="dimension" />
        <attr name="wheel_text_size" format="dimension" />
        <attr name="wheel_text_color" format="color" />
        <attr name="wheel_text_color_current" format="color" />
    </declare-styleable>


    <declare-styleable name="ColorPreference">
        <attr name="dialogTitle" format="string|reference" />
        <attr name="colors" format="reference" />
        <attr name="columns" format="integer" />
        <attr name="material" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewPager">
        <attr name="rvp_triggerOffset" format="float" />
        <attr name="rvp_flingFactor" format="float" />
        <attr name="rvp_singlePageFling" format="boolean" />
    </declare-styleable>


    <declare-styleable name="NavigationTabBar">
        <attr name="ntb_titled" format="boolean"/>
        <attr name="ntb_badged" format="boolean"/>
        <attr name="ntb_scaled" format="boolean"/>
        <attr name="ntb_tinted" format="boolean"/>
        <attr name="ntb_swiped" format="boolean"/>
        <attr name="ntb_badge_use_typeface" format="boolean"/>

        <attr name="ntb_title_size" format="dimension"/>
        <attr name="ntb_title_mode" format="enum">
            <enum name="all" value="0"/>
            <enum name="active" value="1"/>
        </attr>

        <attr name="ntb_badge_size" format="dimension"/>
        <attr name="ntb_badge_position" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <attr name="ntb_badge_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
        </attr>
        <attr name="ntb_badge_bg_color" format="color"/>
        <attr name="ntb_badge_title_color" format="color"/>

        <attr name="ntb_typeface" format="string"/>
        <attr name="ntb_corners_radius" format="dimension"/>
        <attr name="ntb_icon_size_fraction" format="float"/>
        <attr name="ntb_animation_duration" format="integer"/>

        <attr name="ntb_inactive_color" format="color"/>
        <attr name="ntb_active_color" format="color"/>
        <attr name="ntb_bg_color" format="color"/>

        <attr name="ntb_preview_colors" format="reference"/>
    </declare-styleable>

    <declare-styleable name="UltraViewPager">
        <attr name="upv_autoscroll" format="integer" />
        <attr name="upv_infiniteloop" format="boolean" />
        <attr name="upv_ratio" format="float" />
        <attr name="upv_scrollmode" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="upv_disablescroll" format="enum">
            <enum name="none" value="0" />
            <enum name="backward" value="1" />
            <enum name="forward" value="2" />
        </attr>
        <attr name="upv_multiscreen" format="boolean" />
        <attr name="upv_automeasure" format="boolean" />
        <attr name="upv_itemratio" format="float" />
    </declare-styleable>
</resources>